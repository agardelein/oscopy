# First read data from IRF540 simulation
print "*** Reading files and setting plots"
read demo/irf540.dat
%add vgs
create
%add iRD
%add vgs
%add vgs
%add vds
print "*** Fig 2 layout to quad"
layout quad
print "*** Done"
# Oops, forgot a signal in figure 2 graph 3
%select 2-3
%insert vds
# Plot filter response
%read demo/ac.dat
create
%add vout
scale loglog
# Plot square signal, its FFT and a math signal
read demo/tran.dat
create
%add vsqu
%math vsqufft=fft(vsqu)
%add vsqufft
%range -2 2 -100 200
unit V
%math v1=vsqu*3+10
%add v1
unit V
print "*** Insert and remove a signal"
%select 4-1
%insert v1
remove v1
# Use of Time
%math vs=sin(Time(vsqu)*1e6)
create vs
unit V
print "*** List of figures"
figlist
# Create a copy of vout and freeze it
%math vo=vout
freeze vo
%select 3-1
%insert vo
siglist
# Updating
print "*** Now change C value in schematic and rerun gnetlist + gnucap"
#pause...
print "*** Updating"
#update
print "*** Now look at figure 3"
#plot
# Saving results
write gnucap (ow:1) demo/res.dat v1,vsqu
